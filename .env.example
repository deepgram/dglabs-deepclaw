# DeepClaw Platform Environment Variables
# Copy to .env and fill in your values.
# Docker Compose reads .env automatically.

# ─── Gateway (required) ─────────────────────────────────────────────────────
OPENCLAW_GATEWAY_TOKEN=your_gateway_token_here
OPENCLAW_CONFIG_DIR=/Users/you/.openclaw
OPENCLAW_WORKSPACE_DIR=/Users/you/.openclaw/workspace

# ─── Voice / Telephony ──────────────────────────────────────────────────────
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here
PUBLIC_URL=https://your-ngrok-domain.ngrok-free.app

# ─── LLM Providers ──────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=                # Optional — only if using OpenAI models/TTS

# ─── Channels (optional) ────────────────────────────────────────────────────
SLACK_BOT_TOKEN=               # Slack bot OAuth token
SLACK_APP_TOKEN=               # Slack app-level token (socket mode)
GOOGLE_API_KEY=                # Google/Gemini API key
TWILIO_WHATSAPP_FROM=whatsapp:+1xxxxxxxxxx  # WhatsApp-enabled Twilio number

# ─── Claude Integration (optional) ──────────────────────────────────────────
CLAUDE_AI_SESSION_KEY=         # Claude AI session key
CLAUDE_WEB_SESSION_KEY=        # Claude web session key
CLAUDE_WEB_COOKIE=             # Claude web cookie

# ─── Tunnel (optional) ──────────────────────────────────────────────────────
NGROK_AUTHTOKEN=               # ngrok auth token (for auto-tunnel)
NGROK_DOMAIN=                  # ngrok custom domain

# ─── Advanced (optional) ────────────────────────────────────────────────────
OPENCLAW_IMAGE=openclaw:local  # Docker image name
OPENCLAW_GATEWAY_PORT=18789    # Host port for gateway
OPENCLAW_BRIDGE_PORT=18790     # Host port for bridge
OPENCLAW_VOICE_PORT=8000       # Host port for voice webhook (maps to :3334)
OPENCLAW_GATEWAY_BIND=lan      # Bind address: lan, localhost, or 0.0.0.0
